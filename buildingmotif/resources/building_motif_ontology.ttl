@prefix bmotif: <https://nrel.gov/BuildingMOTIF#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .

bmotif:Definition_Type a owl:Class, sh:NodeShape ;
    sh:property [
        sh:path rdfs:label ;
        sh:minCount 1 ;
    ] ;
.

bmotif:Domain_Type a owl:Class .

bmotif:Mechanical a owl:Class ;
    rdfs:subClassOf bmotif:Domain_Type ;
.

bmotif:Electrical a owl:Class ;
    rdfs:subClassOf bmotif:Domain_Type ;
.

bmotif:Plumbing a owl:Class ;
    rdfs:subClassOf bmotif:Domain_Type ;
.

bmotif:Spatial a owl:Class ;
    rdfs:subClassOf bmotif:Domain_Type ;
.

bmotif:HVAC a owl:Class ;
    rdfs:subClassOf bmotif:Mechanical, bmotif:Plumbing ;
.

bmotif:Lighting a owl:Class ;
    rdfs:subClassOf bmotif:Electrical;
.

bmotif:Telemetry a owl:Class ;
    rdfs:subClassOf bmotif:Domain_Type ;
.

bmotif:domain a owl:ObjectProperty, sh:PropertyShape ;
    sh:class bmotif:Domain_Type ;
.

bmotif:Sequence_Of_Operations a owl:Class ;
    rdfs:subClassOf bmotif:Definition_Type ;
    skos:definition "Shape defining a sequence of operations" .

bmotif:Telemetry_Specification a owl:Class ;
    rdfs:subClassOf bmotif:Definition_Type ;
    skos:definition "Shape defining an analytics application" ;
    sh:property [
        sh:path bmotif:domain ;
        sh:qualifiedValueShape [ sh:class bmotif:Telemetry ] ;
        sh:qualifiedMinCount 1 ;
    ] ;
.

bmotif:System_Specification a owl:Class, sh:NodeShape ;
    rdfs:subClassOf bmotif:Definition_Type ;
    skos:definition "Shape defining an system specification" ;
    sh:property [
        sh:path bmotif:domain ;
        sh:qualifiedValueShape [ sh:class [ sh:or (bmotif:Mechanical bmotif:Electrical bmotif:Plumbing bmotif:Spatial) ] ] ;
        sh:qualifiedMinCount 1 ;
    ] ;
.