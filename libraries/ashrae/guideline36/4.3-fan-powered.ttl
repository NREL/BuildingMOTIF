@prefix bmotif: <https://nrel.gov/BuildingMOTIF#> .
@prefix brick: <https://brickschema.org/schema/Brick#> .
@prefix components: <urn:ashrae/g36/components/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix : <urn:ashrae/g36/4.3/fan-powered/> .

:terminal-unit a sh:NodeShape, owl:Class, bmotif:System_Specification ;
    rdfs:label "Fan-Powered Terminal Unit" ;
    sh:class brick:Terminal_Unit ;
    sh:property [
        sh:path brick:hasPart ;
        sh:qualifiedValueShape [
            sh:or (
                components:constant-speed-fan
                components:variable-speed-fan-ecm
                components:variable-speed-fan-vfd
            )
        ] ;
        sh:qualifiedMinCount 1 ;
        sh:qualifiedMaxCount 1 ;
    ] ;
    # required
    sh:property [
        rdfs:label "VAV box damper" ;
        sh:path brick:hasPart ;
        sh:qualifiedValueShape [ sh:node components:supply-damper ] ;
        sh:qualifiedMinCount 1 ;
        sh:qualifiedMaxCount 1 ;
    ] ;
    # required
    sh:property [
        sh:path brick:hasPart ;
        sh:qualifiedValueShape [ sh:node components:heating-coil ] ;
        sh:qualifiedMinCount 1 ;
        sh:qualifiedMaxCount 1 ;
    ] ;
    # required
    sh:property [
        rdfs:label "Primary airflow" ;
        sh:path brick:hasPoint ;
        sh:qualifiedValueShape [ sh:class brick:Discharge_Air_Flow_Sensor ] ;
        sh:qualifiedMinCount 1 ;
        sh:qualifiedMaxCount 1 ;
    ] ;
    # required
    sh:property [
        rdfs:label "Discharge air temperature" ;
        sh:path brick:hasPoint ;
        sh:qualifiedValueShape [ sh:class brick:Discharge_Air_Temperature_Sensor ] ;
        sh:qualifiedMinCount 1 ;
        sh:qualifiedMaxCount 1 ;
    ] ;
    # required
    sh:property [
        sh:path brick:hasPart ;
        sh:qualifiedValueShape [ sh:node components:thermostat] ;
        sh:qualifiedMinCount 1 ;
        sh:qualifiedMaxCount 1 ;
    ] ;
    # must feed a zone
    sh:property [
        sh:path brick:feeds ;
        sh:qualifiedValueShape [ sh:node components:zone ] ;
        sh:qualifiedMinCount 1 ;
        sh:qualifiedMaxCount 1 ;
    ] .
