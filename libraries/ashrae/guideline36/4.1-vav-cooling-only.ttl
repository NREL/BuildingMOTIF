@prefix bmotif: <https://nrel.gov/BuildingMOTIF#> .
@prefix brick: <https://brickschema.org/schema/Brick#> .
@prefix components: <urn:ashrae/g36/components/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix : <urn:ashrae/g36/4.1/vav-cooling-only/> .

:vav-cooling-only a sh:NodeShape, owl:Class, bmotif:System_Specification ;
    rdfs:label "VAV Terminal Unitâ€”Cooling Only" ;
    sh:class brick:Variable_Air_Volume_Box ;
    # required
    sh:property [
        rdfs:label "VAV box damper" ;
        sh:path brick:hasPart ;
        sh:qualifiedValueShape [ sh:node components:damper-modulating ] ;
        sh:qualifiedMinCount 1 ;
        sh:qualifiedMaxCount 1 ;
    ] ;
    # required
    sh:property [
        rdfs:label "Discharge airflow" ;
        sh:path brick:hasPoint ;
        sh:qualifiedValueShape [ sh:class brick:Discharge_Air_Flow_Sensor ] ;
        sh:qualifiedMinCount 1 ;
        sh:qualifiedMaxCount 1 ;
    ] ;
    # required
    sh:property [
        sh:path brick:hasPart ;
        sh:qualifiedValueShape [ sh:node components:thermostat] ;
        sh:qualifiedMinCount 1 ;
        sh:qualifiedMaxCount 1 ;
    ] ;
    # must feed a zone
    sh:property [
        sh:path brick:feeds ;
        sh:qualifiedValueShape [ sh:node components:zone ] ;
        sh:qualifiedMinCount 1 ;
        sh:qualifiedMaxCount 1 ;
    ] .
